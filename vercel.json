{
    "version": 2,
    "functions": {
      "api/index": {
        "handler": "index.handler",
        "runtime": "vercel-node@0.3.2"
      }
    },
    "routes": [
      { "src": "/(.*)", "dest": "api/index.js" }
    ],
    "env": {
      "CONNECTION_STRING": "<your-mongodb-connection-string>"
    }
  }
  